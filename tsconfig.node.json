{
  "include": ["scripts/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "declaration": false,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "outDir": "./scripts/dist",
    "rootDir": "./scripts",
    "strict": true,
    "noImplicitThis": true,
    "moduleResolution": "Node",
    "types": ["./scripts/types.d.ts"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
